{
  // 🔎 Stop indexing junk (search + file watching lighter)
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.cache": true,
    "**/coverage": true,
    "**/tmp": true,
    "**/logs": true
  },
  "search.useIgnoreFiles": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.cache": true,
    "**/coverage": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.next/**": true,
    "**/.cache/**": true,
    "**/coverage/**": true,
    "**/tmp/**": true,
    "**/logs/**": true
  },

  // 🧠 TypeScript/JS language server memory
  "typescript.tsserver.maxTsServerMemory": 4096,
  "javascript.suggest.completeFunctionCalls": false,
  "typescript.suggest.completeFunctionCalls": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "javascript.preferences.useAliasesForRenames": false,
  "typescript.preferences.useAliasesForRenames": false,

  // 🎨 Editor rendering optimizations
  "editor.semanticHighlighting.enabled": false,
  "editor.largeFileOptimizations": true,
  "editor.maxTokenizationLineLength": 10000,
  "editor.wordWrap": "off",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.codeLens": false,
  "editor.smoothScrolling": false,

  // 📂 Explorer tweaks
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,

  // 🧩 Git & extension load
  "git.enabled": true,
  "git.autorefresh": false,
  "git.decorations.enabled": false,
  "git.enableSmartCommit": false,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,

  // 🖥️ Terminal & workbench
  "terminal.integrated.gpuAcceleration": "off",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": 8,
  "workbench.startupEditor": "none",

  // 🧹 File housekeeping
  "files.trimTrailingWhitespace": true,
  "files.hotExit": "off",

  // 🌐 Language validation (disable if external tools handle it)
  "css.validate": false,
  "html.format.enable": false,
  "javascript.validate.enable": true,  // leave true unless ESLint fully replaces it

  // 📊 Telemetry / background tasks
  "telemetry.telemetryLevel": "off",
  "update.mode": "manual"
}
{
  // 🧭 Search & explorer in giant trees
  "search.followSymlinks": false,
  "search.quickOpen.includeSymbols": false,
  "search.useGlobalIgnoreFiles": true,
  "workbench.tree.indent": 14,
  "explorer.incrementalNaming": "smart",

  // 🧩 Git in big repos
  "git.countBadge": "off",
  "git.pruneOnFetch": true,
  "git.fetchOnPull": false,                     // avoids double network hit
  "git.autofetch": false,                       // already light, but reiterating for large repos

  // 📄 Large file handling
  "files.maxMemoryForLargeFilesMB": 8192,       // raise tokenizer limit if you open huge files
  "editor.gotoLocation.multipleDefinitions": "peek",
  "workbench.editor.enablePreview": true,       // reduce open tabs accumulation

  // 🧠 TS/JS responsiveness (monorepos)
  "typescript.tsserver.log": "off",             // set to "verbose" only for debugging
  "typescript.enableProjectDiagnostics": false, // less background churn across many projects
  "typescript.tsserver.useSeparateSyntaxServer": true,

  // ⌛️ Intellisense cost control
  "editor.quickSuggestions": {
    "other": true, "comments": false, "strings": false
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.preview": false
}
